    const collectDialogs = () => {
        const dialogs = [];
        for (let i = 0; i < 4; i++) {
            dialogs.push(<DialogItem name={props.dialogsData[i].name} id={props.dialogsData[i].id}/>)
        }
        return dialogs;
    }
    return (
        <div>
            {collectDialogs()}
        </div>
    )
    function Friends(props) {
        return(
            <div>
                {props.dialogsData.map(dialog => <DialogItem name={dialog.name} id={dialog.id}/>)}
            </div>
        )
    }




    .message {
        width: 300px;
        border-radius: 15px;
        border: 3px solid #1AA0D2;
        display: inline-block;
        position: relative;
    }
    .message::after {
        content: '';
        width: 39px;
        height: 50px;
        border-left: 3px solid #1AA0D2;
        border-bottom: 5px solid #1AA0D2;
        position: absolute;
        bottom: -20px;
        left: 40px;
        background: white;
        transform: skewX(-30deg) skewY(-48deg);
    }
    .message-in {
        border-radius: 12px;
        padding: 30px;
        background: white;
        position: relative;
        z-index: 2;
    }